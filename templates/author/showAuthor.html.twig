{% extends 'base.html.twig' %}

{% block title %}Author Details{% endblock %}

{% block body %}
<div class="example-wrapper">
    {% if author %}
        <h2>{{ author.username|upper }}</h2>
        <img src="{{ asset(author.picture) }}" alt="{{ author.username }}" width="150" height="150">
        <p><strong>Email:</strong> {{ author.email }}</p>
        <p><strong>Number of Books:</strong> {{ author.nb_books }}</p>
    {% else %}
        <p>Author not found.</p>
    {% endif %}

    <a href="{{ path('app_list') }}">Back to list</a>
</div>
{% endblock %}
